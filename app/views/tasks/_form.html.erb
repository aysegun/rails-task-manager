<%= form_with model: @task do |f| %>
  <div class='mb-3 ps-3 pe-3 col-6'>
    <%= f.label :title, class: "form-label pe-3 ps-3" %>
    <%= f.text_field :title, class: "form-control pe-3 ps-3" %>
  </div>
  <div class='mb-3 ps-3 pe-3 col-6'>
    <%= f.label :details, class: "form-label pe-3 ps-3" %>
    <%= f.text_field :details, class: "form-control pe-3 ps-3" %>
  </div>
  <div class="pe-3 ps-3">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>

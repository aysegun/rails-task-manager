<div class= "col-3">
  <h2><%= @task.title %></h2>
  <div class= "task_info">
    <p><%= @task.details %></p>
    <p><%= @task.completed %></p>
  </div>

  <div class= "link_to">
    <%= link_to "Delete this task!", task_path(@task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>

    <%= link_to "Back to list", tasks_path %>

    <%= link_to "Edit this task", edit_task_path %>
  </div>
</div>
